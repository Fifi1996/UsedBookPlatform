<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">
    <RelativeLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#C3BED4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/discuss_user_name"
            android:text="人: "/>
        <TextView
            android:layout_alignParentRight="true"
            android:textColor="#C3BED4"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/discuss_user_time"
            android:text="评论时间:"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="-6dp"
            android:layout_alignParentLeft="true"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/discuss_user_content"
            android:text="评论内容: "/>
        <TextView
            android:layout_alignLeft="@+id/discuss_agree_action"
            android:layout_marginRight="36dp"
            android:textSize="12sp"
            android:text="数量"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/discuss_agree_amount"/>
        <ImageView
            android:id="@+id/discuss_agree_action"
            android:src="@drawable/agree"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</LinearLayout>